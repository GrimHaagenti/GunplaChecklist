<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/myListsButton"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:backgroundTint="#00A592"
        android:fontFamily="sans-serif-black"
        android:text="My Lists"
        android:textColor="#001563"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchKitsButton"
        app:layout_constraintVertical_bias="0.236" />

    <Button
        android:id="@+id/searchKitsButton"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:backgroundTint="#00A592"
        android:fontFamily="sans-serif-black"
        android:text="Search Kits"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#001563"
        android:textSize="20sp"
        app:iconTint="#B50101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"
        app:rippleColor="#650000" />
</androidx.constraintlayout.widget.ConstraintLayout>