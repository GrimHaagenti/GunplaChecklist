<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/myListItemBg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_full" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="none"
        android:fontFamily="@font/iori_family"
        android:text="Wing Gundam Zero "
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/myListItemBg"
        app:layout_constraintEnd_toEndOf="@+id/myListItemBg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myListItemBg"
        app:layout_constraintTop_toTopOf="@+id/myListItemBg"
        app:layout_constraintVertical_bias="0.504" />

    <ImageView
        android:id="@+id/item_gradeIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/myListItemBg"
        app:layout_constraintEnd_toEndOf="@+id/myListItemBg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myListItemBg"
        app:layout_constraintTop_toTopOf="@+id/myListItemBg"
        app:srcCompat="@drawable/ic_transparent" />

    <ImageButton
        android:id="@+id/SendToListButton"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/myListItemBg"
        app:layout_constraintEnd_toEndOf="@+id/myListItemBg"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="@+id/myListItemBg"
        app:layout_constraintTop_toTopOf="@+id/myListItemBg"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_transparent" />

    <ImageButton
        android:id="@+id/quickDeleteButton"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/myListItemBg"
        app:layout_constraintEnd_toEndOf="@+id/myListItemBg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/myListItemBg"
        app:layout_constraintTop_toTopOf="@+id/myListItemBg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_transparent" />

    <ImageView
        android:id="@+id/gradeIcon"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_gradeIcon"
        app:layout_constraintEnd_toEndOf="@+id/item_gradeIcon"
        app:layout_constraintStart_toStartOf="@+id/item_gradeIcon"
        app:layout_constraintTop_toTopOf="@+id/item_gradeIcon"
        app:srcCompat="@drawable/real_grade_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>